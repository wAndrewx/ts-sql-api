{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./build/",
      "allowJs": false,
      "esModuleInterop": true,
      "strict": true,
      "declaration": true,
      "lib": [
        "dom",
        "es6",
        "ES2015"
      ],
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "typeRoots": [
        "./typings",
        "@types",
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "./*.ts",
      "tests/*.spec.ts",
      "index.d.ts",
      // "typings/express/index.d.ts"
    ],
    // "files": [
    //   // "typings/express/index.d.ts"
    // ]
  }